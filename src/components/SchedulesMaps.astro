<script is:inline>
	const handleToggle = () => {
		let toggle = "address";
		const toggleContainer = () => {
			document.querySelectorAll(".toggle-element").forEach((element) => {
				element.style.scale = element.id === toggle ? "1" : "0";
				element.classList[element.id !== toggle ? "add" : "remove"]("h-0");
			});
			document.getElementById("map-container").style.height =
				toggle === "map" ? "40vh" : "2rem";
			toggle = toggle === "map" ? "address" : "map";
		};
		document
			.getElementById("toggle-container")
			.addEventListener("click", toggleContainer);
		toggleContainer();

		let toggle2 = "address2";
		const toggleContainer2 = () => {
			document.querySelectorAll(".toggle-element2").forEach((element) => {
				element.style.scale = element.id === toggle2 ? "1" : "0";
				element.classList[element.id !== toggle2 ? "add" : "remove"]("h-0");
			});
			document.getElementById("map-container2").style.height =
				toggle2 === "map2" ? "40vh" : "2rem";
			toggle2 = toggle2 === "map2" ? "address2" : "map2";
		};
		document
			.getElementById("toggle-container2")
			.addEventListener("click", toggleContainer2);
		toggleContainer2();
	};

	const checkMediaQuery = () => {
		const mediaQuery = window.matchMedia("(max-width: 768px)");
		if (mediaQuery.matches) handleToggle();
	};
	checkMediaQuery();
</script>
