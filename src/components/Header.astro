---
import SC from "../icons/SC.astro";
import BgRed from "./BgRed.astro";
import BgYellow from "./BgYellow.astro";
---

<header
	class="mx-auto p-2 mt-6 w-full top-0 z-10 flex flex-col items-center bg-slate-950/60"
>
	<div class="flex xl:hidden flex-col items-center justify-evenly">
		<div class="w-full flex items-center justify-evenly">
			<SC class="h-[18vw] w-[9vw]" />
			<div>
				<div class="relative px-1 flex flex-col items-center">
					<BgRed>
						<h1 class="px-1 text-[10vw]/[10vw] troglo-title">Salsa En</h1>
					</BgRed>
				</div>
				<div class="relative px-1 flex flex-col items-center">
					<BgRed>
						<h1 class="px-1 text-[10vw]/[10vw] troglo-title">Cordoba</h1>
					</BgRed>
				</div>
			</div>
		</div>
		<div class="w-full flex flex-col items-center justify-evenly">
			<div class="relative px-1 flex items-center justify-evenly">
				<BgYellow>
					<h2 class="text-[3.5vw]/[4.5vw] lg:text-[3vw]/[4vw] text-shadow">
						DALE UN GIRO A TU VIDA - CORTA LA SEMANA
					</h2>
				</BgYellow>
			</div>
			<div class="relative px-1 flex items-center justify-evenly">
				<BgYellow>
					<h2 class="text-[3.5vw]/[4.5vw] lg:text-[3vw]/[4vw] text-shadow">
						HACE DE LOS SÁBADOS TU DIA ESPECIAL
					</h2>
				</BgYellow>
			</div>
			<h3 class="px-1 text-[2.5vw]/[3.5vw]  lg:text-[2vw]/[2.25vw] text-shadow bg-orange-800 font-mono">
				ARRANCA A PARTIR DE CUALQUIER ÉPOCA DEL AÑO - SUMÁTE AHORA
			</h3>
		</div>
	</div>

	<div class="hidden xl:flex p-2 items-center justify-evenly">
		<SC class="h-[10vw] w-[5vw]" />
		<div class="flex flex-col items-center">
			<div class="relative px-2 flex items-center justify-evenly">
				<BgRed>
					<h1 class="px-2 text-[6.5vw]/[6.5vw] troglo-title">Salsa En Cordoba</h1>
				</BgRed>
			</div>
			<div class="relative px-2 flex items-center justify-evenly">
				<BgYellow>
					<h2 class="text-[2vw]/[2vw] text-shadow">
						DALE UN GIRO A TU VIDA - CORTA LA SEMANA - HACE DE LOS SÁBADOS TU
						DIA ESPECIAL
					</h2>
				</BgYellow>
			</div>
			<h3 class="px-3 text-[1.5vw]/[1.5vw] text-shadow bg-orange-800 font-mono">
				ARRANCA A PARTIR DE CUALQUIER ÉPOCA DEL AÑO - SUMÁTE AHORA
			</h3>
		</div>
	</div>
</header>
